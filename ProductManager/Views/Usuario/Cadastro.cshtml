@model ProductManager.Models.Usuario;

<!DOCTYPE html>
<html>
<head>
    <title>Página de cadastro</title>
</head>
<body>
    <h2>Cadastro de usuario</h2>

    <form asp-action="Cadastro" method="post">
        <div>
            <label>Nome:</label>
            <input asp-for="Nome" required />
        </div>
        <div class="gap"></div>
        <div>
            <label>Email:</label>
            <input asp-for="Email" type="email" required />
        </div>
        <div class="gap"></div>
        <div>
            <label>Senha:</label>
            <input asp-for="Senha" type="password" required />
        </div>
        <div class="gap"></div>
        <button type="submit"> CADASTRAR</button>
    </form>
</body>
</html>

