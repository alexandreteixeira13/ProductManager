@model ProductManager.Models.Produto;

<!DOCTYPE html>
<html>
<head>
    <title>Página de cadastro de produto</title>
</head>
<body>
    <h2>Cadastro de Produto</h2>

    <form asp-action="CadastrarProduto" method="post">
        <div>
            <label>Nome:</label>
            <input asp-for="Nome" required />
        </div>
        <div class="gap"></div>
        <div>
            <label>Descricao:</label>
            <input asp-for="descricao" required />
        </div>
        <div class="gap"></div>
        <div>
            <label>Preco:</label>
            <input asp-for="preco" type="number" required />
        </div>
        <div class="gap"></div>
        <div>
            <label>Quantidade:</label>
            <input asp-for="quantidade" type="number" required />
        </div>
        <div class="gap"></div>
        <button type="submit"> CADASTRAR</button>
    </form>
</body>
</html>

